<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="LinkID"
            android:padding="25dp"
            android:paddingLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView

            android:padding="25dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="Activity"
            android:paddingLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:id="@+id/linkspinner"
            android:textAlignment="center"
            android:background="@drawable/spinnerborder"
            android:layout_width="150dp"
            android:entries="@array/link"
            android:layout_height="wrap_content"></Spinner>
        <Spinner

            android:layout_marginTop="30dp"
            android:entries="@array/activity"
            android:layout_weight="1"
            android:background="@drawable/spinnerborder"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:id="@+id/activityspinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:clickable="false"
            android:layout_weight="1"
            android:id="@+id/photocheck"
            android:text="Photo Submited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:clickable="false"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:id="@+id/videocheck"
            android:text="Video Submitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationText"
            android:textColor="#060606"
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_above="@+id/getLocationBtn"
            android:layout_marginBottom="10dp"
            android:padding="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Current Location"
            android:layout_centerInParent="true"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:id="@+id/getLocationBtn"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/buttonshape"
        android:drawableLeft="@drawable/cam"
        android:padding="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="40dp"
        android:shadowColor="#137acd"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Take  Photo"
        android:textColor="#FFFFFF" />

</RelativeLayout>


        <Button
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:drawableLeft="@drawable/camcoder"
            android:padding="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="40dp"
            android:shadowColor="#137acd"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Take Video"
            android:textColor="#FFFFFF" />


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:visibility="gone"
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="120dp"
            android:background="@drawable/buttonshapetwo"
            android:padding="15dp"
            android:shadowColor="#137acd"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Submit"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>